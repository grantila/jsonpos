{
  "name": "jsonpos",
  "version": "0.0.0-development",
  "description": "Get the textual position of a property in a JSON text",
  "author": "Gustaf Räntilä",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grantila/jsonpos/issues"
  },
  "homepage": "https://github.com/grantila/jsonpos#readme",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.prod.json",
    "test": "jest",
    "cz": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grantila/jsonpos"
  },
  "keywords": [
    "json",
    "position",
    "offset",
    "location",
    "property"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/jest": "^27.0.3",
    "@types/json-to-ast": "^2.1.2",
    "cz-conventional-changelog": "^3.1.0",
    "jest": "^27.4.5",
    "rimraf": "^3.0.1",
    "ts-jest-resolver": "^2.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "json-to-ast": "^2.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "resolver": "ts-jest-resolver",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/lib/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/lib/**"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  }
}
